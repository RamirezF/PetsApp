<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@id/txt_clave"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn_registro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ingresar"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"
        android:text="Registrar"/>

    <EditText
        android:id="@+id/txt_clave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar contraseÃ±a"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/txt_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese correo electronico"
        android:inputType="text"
        android:layout_marginStart="16dp"
        android:layout_above="@id/txt_clave"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_usuario"
        android:layout_marginBottom="20sp"
        android:src="@drawable/illuminati"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>