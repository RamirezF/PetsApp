<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="20dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/picture_image_pet"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/pet" />

        <TextView
            android:id="@+id/fullname_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nombre: "/>
        <TextView
            android:id="@+id/raza_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_below="@+id/fullname_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Raza: "/>
        <TextView
            android:id="@+id/edad_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_below="@+id/raza_txt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Edad: "/>

        <TextView
            android:id="@+id/fullname_pet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:text="Firulais"/>
        <TextView
            android:id="@+id/raza_pet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_below="@+id/fullname_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:text="Chitsquiu"/>
        <TextView
            android:id="@+id/edad_pet"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/picture_image"
            android:layout_below="@+id/raza_txt"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="110dp"
            android:text="28"/>





    </RelativeLayout>

</android.support.v7.widget.CardView>
